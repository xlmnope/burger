<h1>Cookies!</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2>Cookies me need to eat!</h2>
      <div class="card-columns">



        {{#each burger}}
        {{#unless devoured}}
        <div class="card" data= "{{this.id}}">
          <img src="{{this.img_url}}" class="cookieimg card-img-top">
          <div class="card-body">
            <p class="card-text" >{{this.burger_name}}</p>
          </div>

            <button type="button" class="btn btn-primary btn-sm eatcookie">Eat this cookie!</button>
        
        </div>



        {{/unless}}
        {{/each}}
      </div>

      <h2>Add a Cookie</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="cb">Cookie Name:</label>
          <input type="text" id="cb" name="burger_name">
        </div>
        <button type="submit">Add Cookie</button>
      </form>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <h2>Cookies me ate! </h2>
      <div class="card-columns">

        {{#each burger}}
        {{#if devoured}}
        <div class="card">
          <img src="{{this.img_url}}" class="cookieimg card-img-top">
          <div class="card-body">
            <p class="card-text">{{this.burger_name}}</p>
          </div>
        </div>

        {{/if}}
        {{/each}}

      </div>

    </div>
  </div>